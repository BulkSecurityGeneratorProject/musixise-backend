<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Musixiser.
    -->
    <changeSet id="20160508010035" author="jhipster">
        <createTable tableName="musixiser">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="realname" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="tel" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="birth" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="gender" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="small_avatar" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="large_avatar" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="nation" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="is_master" type="integer">
                <constraints nullable="true" />
            </column>
            
            <column name="user_id_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="user_id_id"
                                 baseTableName="musixiser"
                                 constraintName="fk_musixiser_user_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
